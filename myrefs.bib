@article{Maddux2018readm,
	abstract = {OBJECTIVES: To determine the rate, etiology, and timing of unplanned and planned hospital readmissions and to identify risk factors for unplanned readmission in children who survive a hospitalization for trauma.
DESIGN: Multicenter retrospective cohort study of a probabilistically linked dataset from the National Trauma Data Bank and the Pediatric Health Information System database, 2007-2012.
