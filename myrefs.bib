@Article{Bennett2015a,
  Title                    = {Linked Records of Children with Traumatic Brain Injury. Probabilistic Linkage without Use of Protected Health Information.},
  Author                   = {Bennett, T. D. and Dean, J. M. and Keenan, H. T. and McGlincy, M. H. and Thomas, A. M. and Cook, L. J.},
