@Article{Hamele2016,
  author      = {Hamele, Mitchell and Stockmann, Chris and Cirulis, Meghan and Riva-Cambrin, Jay and Metzger, Ryan and Bennett, Tellen D. and Bratton, Susan L.},
  journal     = {J Neurotrauma},
  title       = {Ventilator-Associated Pneumonia in Pediatric Traumatic Brain Injury.},
